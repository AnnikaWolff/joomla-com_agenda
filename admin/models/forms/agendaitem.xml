<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_AGENDA_AGENDA_ITEMS_TITLE"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="description"
                type="textarea"
                label="COM_AGENDA_AGENDA_ITEMS_DESC"
                size="40"
                class="textbox"
                default=""
        />
        <field
                name="speaker_id"
                type="list"
                label="COM_AGENDA_AGENDA_ITEMS_SPEAKER"
        >
            <option value="0">Speaker 1</option>
            <option value="1">Speaker 2</option>
        </field>
        <field
                name="place_id"
                type="list"
                label="COM_AGENDA_AGENDA_ITEMS_PLACE"
        >
            <option value="0">Place 1</option>
            <option value="1">Place 2</option>
        </field>
        <field
                name="day"
                type="text"
                label="COM_AGENDA_AGENDA_ITEMS_DAY"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="time"
                type="text"
                label="COM_AGENDA_AGENDA_ITEMS_TIME"
                size="40"
                class="inputbox"
                default=""
        />
    </fieldset>
</form>