<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_AGENDA_AGENDA_ITEMS_TITLE"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="description"
                type="textarea"
                label="COM_AGENDA_AGENDA_ITEMS_DESC"
                size="40"
                class="textbox"
                default=""
        />
        <field
                addfieldpath="/administrator/components/com_agenda/models/fields"
                name="speaker_id"
                type="speakeroptions"
                label="COM_AGENDA_AGENDA_ITEMS_SPEAKER"
        />
        <field
                addfieldpath="/administrator/components/com_agenda/models/fields"
                name="location_id"
                type="locationoptions"
                label="COM_AGENDA_AGENDA_ITEMS_LOCATION"
        />
        <field
                name="day"
                type="day"
                label="COM_AGENDA_AGENDA_ITEMS_DAY"
                size="40"
                class="inputbox"
                default=""
        />
        <field
                name="time"
                type="time"
                label="COM_AGENDA_AGENDA_ITEMS_TIME"
                min="07:00"
                max="20:00"
                class="inputbox"
        />
    </fieldset>
</form>